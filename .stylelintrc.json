{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-selector-bem-pattern"
  ],
  "rules": {
    "color-hex-case": "lower",
    "indentation": 2,
    "plugin/selector-bem-pattern": {
      "preset": "suit"
    },
    "selector-class-pattern": null
  },
  "ignoreFiles": [
    "dist/*",
    "src/styles/normalize.css"
  ]
}
